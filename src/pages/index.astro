---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Martin Carrasco - Developer Portfolio" description="Full-stack developer and creative technologist">
  <!-- Hero Section -->
  <head>
    <link rel="stylesheet" href="/src/styles/styles.css" />
  </head>
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Hi, I'm <span class="highlight">Martin Carrasco</span>
        </h1>
        <p class="hero-subtitle">
          Full-stack developer passionate about creating beautiful, functional, and user-centered digital experiences.
        </p>
        <div class="hero-buttons">
          <a href="/projects" class="btn btn-primary">View My Work</a>
          <a href="/contact" class="btn btn-secondary">Get In Touch</a>
        </div>
      </div>
      <div class="hero-image">
        <div class="profile-container">
          <img src="https://pub-55f502b1bb8a47b18e001af1f25c9d6c.r2.dev/profile-picture.jpeg" alt="Martin Carrasco" class="hero-profile" />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <h2>About Me</h2>
      <div class="about-content">
        <div class="about-text">
          <p>
            I'm a passionate developer with expertise in modern web technologies. 
            I love turning complex problems into simple, beautiful, and intuitive solutions.
          </p>
          <p>
            When I'm not coding, you can find me exploring new technologies, 
            contributing to open source projects, or sharing knowledge with the developer community.
          </p>
        </div>
        <div class="skills">
          <h3>Technologies I work with:</h3>
          <div class="skill-tags">
            <span class="skill-tag">JavaScript</span>
            <span class="skill-tag">TypeScript</span>
            <span class="skill-tag">React</span>
            <span class="skill-tag">Node.js</span>
            <span class="skill-tag">Python</span>
            <span class="skill-tag">Astro</span>
            <span class="skill-tag">CSS</span>
            <span class="skill-tag">Git</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="projects">
    <div class="container">
      <h2>Featured Projects</h2>
      <div class="projects-grid">
        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">Project 1</div>
          </div>
          <div class="project-content">
            <h3>Project Name</h3>
            <p>A brief description of the project and the technologies used.</p>
            <div class="project-links">
              <a href="#" class="project-link">View Project</a>
              <a href="#" class="project-link">Source Code</a>
            </div>
          </div>
        </div>
        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">Project 2</div>
          </div>
          <div class="project-content">
            <h3>Project Name</h3>
            <p>A brief description of the project and the technologies used.</p>
            <div class="project-links">
              <a href="#" class="project-link">View Project</a>
              <a href="#" class="project-link">Source Code</a>
            </div>
          </div>
        </div>
        <div class="project-card">
          <div class="project-image">
            <div class="project-placeholder">Project 3</div>
          </div>
          <div class="project-content">
            <h3>Project Name</h3>
            <p>A brief description of the project and the technologies used.</p>
            <div class="project-links">
              <a href="#" class="project-link">View Project</a>
              <a href="#" class="project-link">Source Code</a>
            </div>
          </div>
        </div>
      </div>
      <div class="projects-cta">
        <a href="/projects" class="btn btn-primary">View All Projects</a>
      </div>
    </div>
  </section>
  <style>
    @import "tailwindcss";

    /* Hero Section */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      background: linear-gradient(135deg, #181c23 0%, #232733 100%);
      color: var(--text-color);
      padding: 2rem 0;
    }

    .hero-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      line-height: 1.2;
      color: #fff;
    }

    .highlight {
      color: #ffd700;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      margin-bottom: 2rem;
      opacity: 0.9;
      line-height: 1.6;
      color: #b0b4be;
    }

    .hero-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 0.75rem 2rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .btn-primary {
      background: #ff6b51;
      color: #fff;
      border: none;
    }

    .btn-primary:hover {
      background: #ff5e3a;
    }

    .btn-secondary {
      background: transparent;
      color: #fff;
      border: 2px solid #ff6b51;
    }

    .btn-secondary:hover {
      background: #ff6b51;
      color: #fff;
    }

    .hero-image {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .profile-container {
      width: 300px;
      height: 300px;
      border-radius: 50%;
      overflow: hidden;
      border: 4px solid white;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .hero-profile {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* About Section */
    .about {
      padding: 5rem 0;
      background: #232733;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .about h2 {
      font-size: 2.5rem;
      margin-bottom: 3rem;
      text-align: center;
      color: #fff;
    }

    .about-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: start;
    }

    .about-text p {
      font-size: 1.1rem;
      line-height: 1.8;
      margin-bottom: 1.5rem;
      color: #b0b4be;
    }

    .skills h3 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      color: #fff;
    }

    .skill-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .skill-tag {
      background: #232733;
      color: #ff6b51;
      padding: 0.5rem 1rem;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 500;
      border: 1px solid #ff6b51;
    }

    /* Projects Section */
    .projects {
      padding: 5rem 0;
      background: #181c23;
    }

    .projects h2 {
      font-size: 2.5rem;
      margin-bottom: 3rem;
      text-align: center;
      color: #fff;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .project-card {
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-5px);
    }

    .project-image {
      height: 200px;
      background: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .project-placeholder {
      color: #999;
      font-size: 1.2rem;
    }

    .project-content {
      padding: 1.5rem;
    }

    .project-content h3 {
      font-size: 1.3rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .project-content p {
      color: #b0b4be;
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .project-links {
      display: flex;
      gap: 1rem;
    }

    .project-link {
      color: #667eea;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9rem;
    }

    .project-link:hover {
      text-decoration: underline;
    }

    .projects-cta {
      text-align: center;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .hero-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
      }

      .hero-title {
        font-size: 2rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .profile-container {
        width: 160px;
        height: 160px;
      }

      .about {
        padding: 2.5rem 0;
      }

      .about-content {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .projects {
        padding: 2.5rem 0;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }

      .btn {
        padding: 0.5rem 1.2rem;
        font-size: 1rem;
      }

      .container {
        padding: 0 1rem;
      }

      .hero-buttons {
        justify-content: center;
        flex-direction: column;
        gap: 0.7rem;
      }
    }

    @media (max-width: 480px) {
      .hero-title {
        font-size: 1.3rem;
      }
      .profile-container {
        width: 110px;
        height: 110px;
      }
      .about h2, .projects h2 {
        font-size: 1.3rem;
      }
      .skills h3 {
        font-size: 1rem;
      }
      .project-content h3 {
        font-size: 1rem;
      }
    }

  </style>
</BaseLayout>
