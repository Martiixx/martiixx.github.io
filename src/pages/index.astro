---
import BaseLayout from '../layouts/BaseLayout.astro';
import projectsData from '../data/projects.json';

// Get the first 3 projects for the featured section
const featuredProjects = projectsData.slice(0, 4);
---

<BaseLayout title="Martin Carrasco - Portfolio" description="Software Engineer with 7 years of experience in backend architecture, microservices, and modern web technologies">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Hi, I'm <span class="highlight">Martin Carrasco</span>
        </h1>
        <p class="hero-subtitle">
          Software Engineer with 7 years of experience specializing in backend architecture, microservices, and Event-Driven Architecture. Currently working on high-performance systems processing millions of data points.
        </p>
        <div class="hero-buttons">
          <a href="/projects" class="btn btn-primary">View My Work</a>
          <a href="/contact" class="btn btn-secondary">Get In Touch</a>
        </div>
      </div>
      <div class="hero-image">
        <div class="profile-container">
          <img src="https://pub-55f502b1bb8a47b18e001af1f25c9d6c.r2.dev/profile-picture.jpeg" alt="Martin Carrasco" class="hero-profile" />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <h2>About Me</h2>
      <div class="about-content">
        <div class="about-text">
          <p>
            I'm a passionate Software Engineer with expertise in backend architecture, microservices, and modern web technologies. 
            I specialize in building scalable applications using NestJS, Kafka, and advanced architectural patterns.
          </p>
          <p>
            My expertise includes designing scalable microservices, implementing Backend-for-Frontend patterns, 
            and optimizing cloud infrastructure. I'm passionate about sharing knowledge with fellow developers 
            and contributing to collaborative work environments.
          </p>
        </div>
        <div class="skills">
          <h3>Technologies I work with:</h3>
          <div class="skill-tags">
            <span class="skill-tag">TypeScript</span>
            <span class="skill-tag">Node.js</span>
            <span class="skill-tag">NestJS</span>
            <span class="skill-tag">Java</span>
            <span class="skill-tag">Spring Boot</span>
            <span class="skill-tag">Kafka</span>
            <span class="skill-tag">MongoDB</span>
            <span class="skill-tag">Redis</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="projects">
    <div class="container">
      <h2>Featured Projects</h2>
      <div class="projects-grid">
        {featuredProjects.map((project) => (
          <div class="project-card">
            <div class="project-image">
              <a href={project.links.github} target="_blank" rel="noopener noreferrer">
                <img src={project.image} alt={project.name} class="project-img" />
              </a>
            </div>
            <div class="hero-project-content">
              <div class="project-content">
                <h3>{project.name}</h3>
                <p>{project.description}</p>
                <div class="project-links">
                  <a href={project.links.github} class="project-link" target="_blank" rel="noopener noreferrer">Source Code</a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      <div class="projects-cta">
        <a href="/projects" class="btn btn-primary">View All Projects</a>
      </div>
    </div>
  </section>
</BaseLayout>
